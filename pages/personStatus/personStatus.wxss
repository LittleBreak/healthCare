/* pages/personStatus.wxss */
.container{
  width: 100%;
  height: 100%;
  padding: 0 40rpx 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  background-color: #F1F1F1;
  position: relative;
}
.bg{
  height: 146rpx;
  width: 100%;
  background-color: #327FFF;
  position: absolute;
  left: 0px;
  top: 0px;
}
.card{
  z-index: 10;
  background-color: #fff;
  border-radius: 20rpx;
  width: 100%;
  padding-top: 40rpx;
  margin: 35rpx 0px 30rpx 0rpx;
}
.avatar{
  width: 78rpx;
  height: 78rpx;
}
.self{
  width: 400rpx;
  height: 400rpx;
  padding: 10rpx;
  border: 15rpx dotted #975FE6;
}
.photo{
  text-align: center;
  
}
.return-btn{
  border-radius: 20rpx;
  height: 92rpx;
  line-height: 92rpx;
  background-color: #0C8CE5;
  font-size: 36rpx;
  color: #fff;
  font-weight: 600;
  width: 100%;
  text-align: center;
}
.basic-info{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.qrcode{
  height: 75rpx;
  width: 98rpx;
}
.time{
  color: #6C6C6C;
  text-align: center;
}
.person-status{
  display: flex;
  justify-content: center;
  margin: 20rpx 0rpx;
}
.person-status text{
  font-size: 50rpx;
  color: #09BB07;
  padding: 0px 20rpx;
  font-weight: 900;
  line-height: 70rpx;
}
.question{
  width: 50rpx;
  height: 50rpx;
  padding-top: 10rpx;
}
.info-item{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  margin-bottom: 30rpx;
  padding: 0px 35rpx;
}
.info-item-title{
  color: #9E9E9E;
  font-size: 30rpx;
}
.info-item-value{
  font-size: 30rpx;
  text-align: right;
  color: #424242;
}
.warn{
  color: red;
}
.org{
  margin-top: 30rpx;
  color: #B9B9B9;
  text-align: center;
  font-size: 26rpx;
}